<%- include ../includes/header %>
<div class="row">	
	<article>
		<ul class="articleList">

			<% articles.forEach(function(article){ %>
			<li>
				<a href="/articles/<%= article._id %>">
					<h4><%= article.title %></h4>
					<div>
						<%= article.body %>
					</div>
					<p>
						<%=: article.createdAt | format_time %>
					</p>
				</a>
			</li>
			<% }) %>
		</ul>
	</article>
	<div class="pagination pagination-right">
        <ul>
            <li><a href="#">«</a></li>
            <li><a href="#">1</a></li>
            <li><a href="#">2</a></li>
            <li><a href="#">3</a></li>
            <li><a href="#">4</a></li>
            <li><a href="#">5</a></li>
            <li><a href="#">»</a></li>
        </ul>
    </div>
</div>
<%- include ../includes/footer %>