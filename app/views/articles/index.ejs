<%- include ../includes/header %>
<div class="container mainbody"  data-category="<%= articles[0].category %>">
<div class="row">	
	<article>
		<ul class="articleList clearfix">
			<% articles.forEach(function(article){ %>
			<li>
				<a href="/articles/<%= article._id %>">
					<h4><%= article.title %></h4>
					<div>
						<%=: article.body | truncate:140 %>
					</div>
					<p>
						<%=: article.createdAt | format_time %> | 
						<% article.tags.split(',').forEach(function(tag){ %>
							<a href="/tags/<%= tag%>"><%= tag%></a>
						<% }) %>
					</p>
				</a>
			</li>
			<% }) %>
		</ul>
	</article>

	<% if(pages > 1){ %>
		<div class="pagination pagination-right">
	        <ul>
	        	<% if( page > 1 ){ %>
		        	<li><a href="?page=<%= page-1 %>">«</a></li>
	        	<% } %>

	        	<% for (var i = 1; i <= pages; i++ ) { %>
	        		<% if ( page == i ){ %>
		        		<li class="active"><a href="?page=<%= i %>"><%= i %></a></li>
	        		<% } else { %>
		        		<li><a href="?page=<%= i %>"><%= i %></a></li>
	        		<% } %>
	        	<% } %>

	        	<% if( page < pages ){ %>
		        	<li><a href="?page=<%= page + 1 %>">»</a></li>
	        	<% } %>
	        </ul>
	    </div>
	<% } %>
</div>
</div><!-- end of .container -->
<%- include ../includes/footer %>