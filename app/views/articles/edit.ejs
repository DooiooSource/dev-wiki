<%- include ../includes/header %>
<div class="container mainbody">
<legend>编辑</legend>
<div class="row">
    <form action="/articles/<%= article.id %>" method="post">
        <div class="span9">
            <div class="row">
                <label class="span7">标题：</label>
                <label class="span2">分类：</label>
            </div>
            <div class="controls controls-row">
                <input type="text" class="span7" name="title" value="<%= article.title %>">
                <select name="category" class="span2">
                    <option>选择分类</option>
                    <option value="frontend" <%= article.category == "frontend" ? 'selected' : '' %>>前端</option>
                    <option value="backend" <%= article.category == "backend" ? 'selected' : '' %>>后端</option>
                    <option value="IDC" <%= article.category == "IDC" ? 'selected' : '' %>>交互</option>
                    <option value="mobile" <%= article.category == "mobile" ? 'selected' : '' %>>移动</option>
                    <option value="PM" <%= article.category == "PM" ? 'selected' : '' %>>产品</option>
                </select>           
            </div>
            <ul class="nav nav-tabs">
                <li class="active tab-write">
                    <a href="#">正文</a>
                </li>
                <li class="tab-preview">
                    <a href="#">预览</a>
                </li>
            </ul>
            <section class="panel-write">
                <div class="btn-toolbar js_mdinsert">
                    <div class="btn-group">
                        <a class="btn" data-insert="h1" href="#"><b>h1</b></a>
                        <a class="btn" data-insert="h2" href="#"><b>h2</b></a>
                        <a class="btn" data-insert="h3" href="#"><b>h3</b></a>
                    </div>
                    <div class="btn-group">
                        <a class="btn" data-insert="link" href="#"><i class="icon-link"></i></a>
                        <a class="btn" data-insert="image" href="#"><i class="icon-picture"></i></a>
                    </div>
                    <div class="btn-group">
                        <a class="btn" data-insert="bold" href="#"><i class="icon-bold"></i></a>
                        <a class="btn" data-insert="italic" href="#"><i class="icon-italic"></i></a>
                        <a class="btn" data-insert="code" href="#"><i class="icon-code"></i></a>
                    </div>
                    <div class="btn-group">
                        <a class="btn" data-insert="ul" href="#"><i class="icon-list-ul"></i></a>
                        <a class="btn" data-insert="ol" href="#"><i class="icon-list-ol"></i></a>
                        <a class="btn" data-insert="blockquote" href="#"><i class="icon-quote-right"></i></a>
                        <a class="btn" data-insert="hr" href="#"><i class="icon-minus"></i></a>
                    </div>
                    <div class="btn-group">
                        <a class="btn function-help" href="#"><i class="icon-question"></i></a>
                    </div>
                </div>
                <pre id="editor"><%= article.body %></pre>
                <textarea id="maincontent" rows="8" name="body" class="span10 hideit"><%= article.body %></textarea>
            </section>
            <section class="panel-preview hideit">
            </section>
            <p class="insertnote">
                <input type="file" multiple id="uploadInput" class="hideit">
                将光标定位到你想要插入图片的位置，然后直接将图片拖入上面区域，或<a href="javascript:;" class="js_insertImg">点击此处添加图片</a>。
            </p>
            <input type="hidden" name="_method" value="PUT">
            <button type="submit" class="btn btn-primary">提交</button>
            <a href="/articles" title="cancel" class="btn">取消</a>
        </div>
        <div class="span3">
            <label>状态：</label>
            <select name="status" class="span3">
                <option value="published" <%= article.status == 'published' ? "selected" : "" %>>发布</option>
                <option value="draft" <%= article.status== 'draft' ? "selected" : "" %>>草稿</option>
            </select>
            <label>标签：</label>
            <input name="tags" id="tags" value="<%= article.tags %>"/>
        </div>
    </form> 
</div>
</div><!-- end of .container -->
<script type="text/javascript" src="/js/src-min-noconflict/ace.js"></script>
<script type="text/javascript" src="/js/fileupload.js"></script>
<script type="text/javascript" src="/js/edit.js"></script>
<script type="text/javascript">
$(function() {
    $('#tags').tagsInput({width:'auto'});
}); 
</script>
<%- include ../includes/footer %>
