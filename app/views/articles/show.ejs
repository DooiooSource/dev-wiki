<%- include ../includes/header %>
<div class="container mainbody">
	<div class="row">
		<aside class="span3 outline">
			<div>
				<form action="/articles/<%= article.id %>" method="post" class="center form-inline confirm">
				  	<a href="/articles/<%= article.id %>/edit" title="edit" class="btn">编辑</a>
				  	<input type="hidden" name="_method" value="DELETE">
				  	<button type="submit" class="btn btn-danger">删除</button>
				</form>
			</div>
			<h3>文章目录</h3>
			<ul class="affix-top">
				<% article.outline.forEach(function(item){ %>
				<li>
					<a href=""><%= item %></a>
				</li>
				<% }) %>
			</ul>
		</aside>	
		<article class="span9 mdbody">
			<header>
				<h1>
					<%= article.title %>
				</h1>
				<small>
					<span class="createDate"><%=: article.createdAt | format_time %></span>
				</small>
			</header>
			<section>
				<%- article.body %>	
			</section>	

		</article>
	</div>
</div><!-- end of .container -->
<%- include ../includes/footer %>