<%- include ../includes/header %>
<div class="container mainbody">
	<div class="row">

		
		<article class="col-md-8 mdbody clearfix">
			<header>
				<h1>
					<%= article.title %>
				</h1>
			</header>

			<section>
				<%-: article.body | parse_markdown %>	
			</section>	
			<small class="pull-right">
				<% if (username) { %>
					<a href="/articles/<%= article.id %>/edit" title="edit">编辑</a>
				<% } %>
				<span class="createDate"><%=: article.createdAt | format_time %></span>
				by 
				<span><%= article.user.username %></span>
			</small><br>
			<div  class="pull-right">
				<% if(username === article.user.username) { %>
				<form action="/articles/<%= article.id %>" method="post" class="center form-inline confirm">
				  	<input type="hidden" name="_method" value="DELETE">
				  	<button type="submit" class="btn btn-danger js_deletePost">删  除</button>
				</form>
				<% } %>
			</div>
		</article>

<!--         <div class="col-md-4">
            <a href="/user/<%= article.user.empNo %>" class="big-avatar" style="background-image:url(http://100.dooioo.com:7070/photos/<%= article.user.empNo %>_150x200.jpg)">
            </a>
            <h4 class="center"><%= article.user.username %></h4>
        </div> -->
		
		<div class="col-md-8 comment-panel">
			<h4>评论</h4>
			<ul class="item-list comment-list">
                <% article.comments.forEach(function(comment){ %>
                <li class="clearfix">
	                <div class="pull-left">
	                    <a href="" class="avatar" style="background-image:url(http://100.dooioo.com:7070/photos/<%= comment.user.empNo %>_60x80.jpg)"></a>
	                </div>
	                <div class="pull-left" style="width: 674px;">
                        <div>
                            <a href="/articles/<%= article._id %>" class="left"> <%= comment.user.username %> </a>
                            <small class="pull-right"> <%=: comment.createdAt | format_time:'YYYY-MM-DD HH:mm' %> </small>
                        </div>
	                    <div> <%= comment.body %>  </div>
	                </div>
                </li>
                <% })%>
            </ul>
            <% if (username) { %>
			<form action="/articles/<%= article.id %>/comments" method="post">
				<textarea name="body" class="form-control comment-input" rows="3"></textarea>
				<button type="submit" class="btn btn-primary pull-right">评论</button>
			</form>
            <% } else { %>
                <p style="text-align: right">
                    <a href="/login?from=/articles/<%= article.id %>" target="_blank">登录</a>后可评论。
                </p>
            <% } %>
		</div>
	</div>
</div><!-- end of .container -->
<%- include ../includes/footer %>